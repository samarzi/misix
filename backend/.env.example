# ============================================================================
# MISIX Backend Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control!
# ============================================================================

# ============================================================================
# Required Configuration (Must be set)
# ============================================================================

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# Telegram Bot Configuration (Required)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-from-botfather

# Yandex API Configuration
YANDEX_GPT_API_KEY=your-yandex-gpt-api-key
YANDEX_FOLDER_ID=your-yandex-folder-id

# ============================================================================
# Optional Configuration (Has safe defaults)
# ============================================================================

# Application Settings
ENVIRONMENT=development
DEBUG=false

# Yandex GPT Settings
YANDEX_GPT_BASE_URL=https://llm.api.cloud.yandex.net/foundationModels/v1/completion
YANDEX_GPT_MODEL=yandexgpt-lite
YANDEX_GPT_TEMPERATURE=0.7
YANDEX_GPT_MAX_TOKENS=2048

# Telegram Bot Settings
# Webhook URL for production (optional, uses polling if not set)
# For production deployment, set this to your public URL:
# TELEGRAM_WEBHOOK_URL=https://your-domain.com/bot/webhook
# 
# If not set, the system will try to derive it from BACKEND_BASE_URL
# For local development, leave this unset to use polling mode

# Database Settings (Optional)
# Direct PostgreSQL connection URL for Alembic migrations
# Get this from Supabase Dashboard -> Settings -> Database -> Connection string
# DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Backend Settings
BACKEND_BASE_URL=http://localhost:8000

# Frontend Settings (comma-separated list)
# For local development:
FRONTEND_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# For production (example):
# FRONTEND_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Redis Settings (Optional, for caching)
# REDIS_URL=redis://localhost:6379/0

# Security Settings (Optional)
# Generate using: openssl rand -hex 32
# ENCRYPTION_KEY=your-encryption-key-min-32-chars

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=.jpg,.jpeg,.png,.pdf,.txt,.doc,.docx

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json
