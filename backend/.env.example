# ============================================================================
# MISIX Backend Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control!
# ============================================================================

# ============================================================================
# Required Configuration (Must be set)
# ============================================================================

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# JWT Configuration
# Generate using: openssl rand -hex 32
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars

# Yandex API Configuration
YANDEX_GPT_API_KEY=your-yandex-gpt-api-key
YANDEX_FOLDER_ID=your-yandex-folder-id

# ============================================================================
# Optional Configuration (Has safe defaults)
# ============================================================================

# Application Settings
ENVIRONMENT=development
DEBUG=false

# JWT Settings
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Yandex GPT Settings
YANDEX_GPT_BASE_URL=https://llm.api.cloud.yandex.net/foundationModels/v1/completion
YANDEX_GPT_MODEL=yandexgpt-lite
YANDEX_GPT_TEMPERATURE=0.7
YANDEX_GPT_MAX_TOKENS=2048

# Telegram Bot Settings (Optional)
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# TELEGRAM_WEBHOOK_URL=https://your-domain.com/bot/webhook

# Backend Settings
BACKEND_BASE_URL=http://localhost:8000

# Frontend Settings (comma-separated list)
# For local development:
FRONTEND_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# For production (example):
# FRONTEND_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Redis Settings (Optional, for caching)
# REDIS_URL=redis://localhost:6379/0

# Security Settings (Optional)
# Generate using: openssl rand -hex 32
# ENCRYPTION_KEY=your-encryption-key-min-32-chars

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AUTH_PER_MINUTE=5

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=.jpg,.jpeg,.png,.pdf,.txt,.doc,.docx

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json
